@{
    ViewData["Title"] = "注册";
    Layout = null;
}

<!doctype html>
<html>
<head>
    <meta http-equiv="content-type" charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1.0,maximum-scale=1">
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/css/login_style.css" rel="stylesheet" type="text/css" />
    <meta name="keywords" content="game softwave" />
    <title>登录</title>
</head>

<body>
    <div class="bg">
        <h2>欢迎登录游戏软件购买系统</h2>
        <div class="login-top">
            <h1>LOGIN</h1>
            <form class="form-horizontal" role="form">
                <!-- 1.账号 -->
                <div class="form-group">
                    <label for="name" class="col-sm-3 control-label">User Name</label>
                    <div class="col-sm-8">
                        <input type="text" id="name" class="form-control" placeholder="请输入您的姓名">
                    </div>
                </div>
                <!-- 2.密码 -->
                <div class="form-group">
                    <label for="password" class="col-sm-3 control-label">Password</label>
                    <div class="col-sm-8">
                        <input type="text" id="password" class="form-control" placeholder="请输入您的密码">
                    </div>
                </div>
                <!-- 3.记住我 -->
                <div class="form-group">
                    <div class="col-sm-offset-3 col-sm-5">
                        <div class="checkbox">
                            <label>
                                <input type="checkbox">请记住我
                            </label>
                        </div>
                    </div>
                </div>
                <!-- 4.登录按钮 -->
                <div class="form-group">
                    <div class="forgot col-sm-offset-2 col-sm-10">
                        <a href="#">Forgot Password</a>
                        <button type="submit" class="btn btn-default">登录</button>
                        <button type="submit" class="btn btn-default">注册</button>
                    </div>
                </div>
            </form>
        </div>
        <div class="login-bottom">
            <h3>Return to <a  asp-area="" asp-controller="Home" asp-action="Index">Index</a> Here</h3>
        </div>
        <div class="copyright">
            <p> Copyright 2018.ZHBIT  ALL right</p>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery-1.11.0.min.js"></script>

</body>
</html>
